<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/eval_title"
        layout="@layout/item_title3"></include>

    <RelativeLayout
        android:id="@+id/eva_rl_top"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        >
        <ImageView
            android:id="@+id/eva_head"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape"
            />

        <TextView
            android:id="@+id/eva_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送货员1"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/eva_head"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            />
        <TextView
            android:id="@+id/eva_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易成功"
            android:textSize="16sp"
            android:textColor="#FF0000"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        />
    <RelativeLayout
        android:id="@+id/eva_rl_body"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <TextView
            android:id="@+id/eva_tv_task"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="买菜"
            android:textSize="35sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/eva_tv_text"
            android:layout_width="200dp"
            android:layout_height="16dp"
            android:layout_below="@+id/eva_tv_task"
            android:text="备注"
            android:paddingLeft="16dp"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/eva_tv_1"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/eva_tv_task"
            android:text="最远距离："
            android:textSize="15sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/eva_tv_dis"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/eva_tv_1"
            android:text="2km"
            android:textSize="15sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/eva_tv_2"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/eva_tv_task"
            android:layout_below="@+id/eva_tv_1"
            android:text="奖励金额："
            android:textSize="15sp"
            android:gravity="center"

            />
        <TextView
            android:id="@+id/eva_tv_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/eva_tv_dis"
            android:text="￥5"
            android:textSize="15sp"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:text="评价:"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:paddingLeft="16dp"
        />
    <EditText
        android:id="@+id/eva_et_text"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <EditText
            android:id="@+id/eva_et_1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="服务态度:"
            android:background="@null"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            />
        <EditText
            android:id="@+id/eva_et_2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="服务质量:"
            android:background="@null"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/eva_et_1"
            />
        <TextView
            android:id="@+id/eva_et_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/eva_et_1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="★   ★   ★   ★   ★ "
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/eva_et_2"
            android:layout_below="@+id/eva_et_3"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="★   ★   ★   ★   ★ "
            android:textSize="20dp"
            />

    </RelativeLayout>


</LinearLayout>
