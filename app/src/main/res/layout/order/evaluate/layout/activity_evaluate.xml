<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/eval_title"
        layout="@layout/item_title3"></include>

    <RelativeLayout
        android:id="@+id/eva_rl_top"
        android:layout_width="match_parent"
        android:layout_height="33dp">

        <ImageView
            android:id="@+id/eva_head"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:background="@drawable/shape" />

        <TextView
            android:id="@+id/eva_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/eva_head"
            android:paddingLeft="16dp"
            android:text="送货员1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/eva_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="交易成功"
            android:textColor="#FF0000"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#33000000" />

    <RelativeLayout
        android:id="@+id/eva_rl_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eva_tv_task"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="买菜"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/eva_tv_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eva_tv_task"
            android:paddingLeft="16dp"
            android:text="备注"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/eva_tv_1"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/eva_tv_task"
            android:gravity="center"
            android:text="最远距离："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/eva_tv_dis"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/eva_tv_1"
            android:gravity="center"
            android:text="2km"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/eva_tv_2"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_below="@+id/eva_tv_1"
            android:layout_toRightOf="@+id/eva_tv_task"
            android:gravity="center"
            android:text="奖励金额："
            android:textSize="15sp"

            />

        <TextView
            android:id="@+id/eva_tv_money"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_toRightOf="@+id/eva_tv_dis"
            android:gravity="center"
            android:text="￥5"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#33000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="对快递员评价:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/eva_et_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="start"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="对雇主评价:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/eva_et_text2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="start"
        android:paddingLeft="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <EditText
            android:id="@+id/eva_et_1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:gravity="center"
            android:text="服务态度:" />

        <EditText
            android:id="@+id/eva_et_2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/eva_et_1"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:gravity="center"
            android:text="服务质量:" />

        <TextView
            android:id="@+id/eva_et_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/eva_et_1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="★   ★   ★   ★   ★ "
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/eva_et_3"
            android:layout_toRightOf="@+id/eva_et_2"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="★   ★   ★   ★   ★ "
            android:textSize="20dp" />

    </RelativeLayout>


</LinearLayout>
