<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.zucc.wmhxa.kuaishou.activity.home.FriendApplyActivity">

    <include
        android:id="@+id/friapply_title"
        layout="@layout/item_title1"></include>


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="#F2F2F2"
      >
      <ImageView
          android:id="@+id/friapply_iv_1"
          android:layout_width="35sp"
          android:layout_height="35dp"
          android:background="@drawable/ic_search"
          android:layout_centerVertical="true"
          android:layout_marginLeft="16dp"
          />
      <EditText
          android:id="@+id/friapply_et_search"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_toRightOf="@+id/friapply_iv_1"
          android:background="@null"
          android:layout_marginRight="16dp"
          />

  </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#33000000" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#D7D7D7"
        android:text="好友通知"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        />
    <ListView
        android:id="@+id/friapply_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>
