<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.zucc.wmhxa.kuaishou.AddFriendActivity">

    <include
        android:id="@+id/addfir_title"
        layout="@layout/item_title1"></include>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/addfri_im_headpic"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@drawable/shape"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            />
        <TextView
            android:id="@+id/addfri_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_toRightOf="@+id/addfri_im_headpic"
            android:layout_marginTop="16dp"
            android:text="陈欢"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/addfri_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_toRightOf="@+id/addfri_tv_name"
            android:layout_marginTop="16dp"
            android:text="男"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textSize="18sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/addfri_tv_1"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_toRightOf="@+id/addfri_im_headpic"
            android:layout_below="@+id/addfri_tv_name"
            android:text="好评数："
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textSize="16sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/addfri_tv_level"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_toRightOf="@+id/addfri_tv_1"
            android:layout_below="@+id/addfri_tv_name"
            android:text="100"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="#000000"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#D7D7D7"
        />
    <Button
        android:id="@+id/addfri_bt_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="申请好友"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@color/gray"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        />


</LinearLayout>
