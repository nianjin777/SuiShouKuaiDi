<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edu.wmhxa.sskd.activity.login.RegisterActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/register_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/kuaishou"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="输入账号:" />

                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/reg_et_zhanghao"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:background="@null" />

                    <TextView
                        android:id="@+id/reg_tv_zhanghao"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="center" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#33000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="密码:" />

                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/reg_et_mima"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:inputType="textPassword" />

                    <TextView
                        android:id="@+id/reg_tv_mima"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="center" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#33000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="再次输入密码:" />

                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/reg_et_remima"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:inputType="textPassword" />

                    <TextView
                        android:id="@+id/reg_tv_remima"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="center" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#33000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="姓名:" />

                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/reg_et_name"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:background="@null" />

                    <TextView
                        android:id="@+id/reg_tv_name"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="center" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#33000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="性别:" />

                <RadioGroup
                    android:id="@+id/reg_rg_sexgroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/reg_rb_sexman"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="男" />

                    <RadioButton
                        android:id="@+id/reg_rb_sexwomen"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:text="女" />

                </RadioGroup>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#33000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="身份证号码:" />

                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/reg_et_idcard"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:background="@null" />

                    <TextView
                        android:id="@+id/reg_tv_idcard"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="center" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#33000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="联系电话:" />

                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/reg_et_phone"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:background="@null" />

                    <TextView
                        android:id="@+id/reg_tv_phone"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="center" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#33000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="邮箱（选填）:" />

                <RelativeLayout
                    android:layout_width="240dp"
                    android:layout_height="50dp">

                    <EditText
                        android:id="@+id/reg_et_email"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:background="@null" />

                    <TextView
                        android:id="@+id/reg_tv_email"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="center" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#33000000" />

            <Button
                android:id="@+id/register_bt_new"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#F64242"
                android:text="注册"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/register_bt_return"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                android:text="返回"
                android:textColor="#1E90FF" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
