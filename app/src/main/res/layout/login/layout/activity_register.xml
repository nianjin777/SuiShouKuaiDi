<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.zucc.wmhxa.kuaishou.activity.login.RegisterActivity">

    <EditText
        android:id="@+id/register_et_username"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_et_password"
        android:layout_centerHorizontal="true"
        android:hint="用户名"
        android:paddingLeft="16dp" />

    <EditText
        android:id="@+id/register_et_password"
        android:hint="密码"
        android:paddingLeft="16dp"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/register_et_repassword"
        android:hint="再次输入密码"
        android:paddingLeft="16dp"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/register_bt_new"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_et_repassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#1E90FF"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/register_bt_return"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/register_bt_new"
        android:layout_below="@+id/register_bt_new"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:text="返回"
        android:textColor="#1E90FF" />

    <ImageView
        android:id="@+id/register_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/register_et_username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="#1E90FF" />

</RelativeLayout>
