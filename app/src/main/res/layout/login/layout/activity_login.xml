<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.wmhxa.sskd.activity.login.LoginActivity">


    <EditText
        android:id="@+id/login_et_username"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_above="@+id/login_et_password"
        android:layout_centerHorizontal="true"
        android:hint="账号"
        android:paddingLeft="16dp" />

    <EditText
        android:id="@+id/login_et_password"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingLeft="16dp" />

    <Button
        android:id="@+id/login_bt_login"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#F64242"
        android:text="登陆"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login_bt_newuser"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/login_bt_login"
        android:layout_below="@+id/login_bt_login"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_bg"
        android:text="新用户注册"
        android:textColor="#F64242" />

    <ImageView
        android:id="@+id/login_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/login_et_username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/kuaishou" />


</RelativeLayout>
