<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/itemwait_rl_top"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        >
        <ImageView
            android:id="@+id/itemwait_head"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape"
            />

        <TextView
            android:id="@+id/itemwait_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送货员1"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/itemwait_head"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            />
        <TextView
            android:id="@+id/itemwait_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待支付"
            android:textSize="16sp"
            android:textColor="#FF0000"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@+id/item_tv_address"/>

    <RelativeLayout
        android:id="@+id/waitfin_rl_body"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <TextView
            android:id="@+id/waitfin_tv_task"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="买菜"
            android:textSize="35sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/waitfin_tv_text"
            android:layout_width="200dp"
            android:layout_height="16dp"
            android:layout_below="@+id/waitfin_tv_task"
            android:text="备注"
            android:paddingLeft="16dp"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/waitfin_tv_distance"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/waitfin_tv_task"
            android:text="最远距离："
            android:textSize="15sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/waitfin_tv_dis"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/waitfin_tv_distance"
            android:text="2km"
            android:textSize="15sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/waitfin_tv_reward"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/waitfin_tv_task"
            android:layout_below="@+id/waitfin_tv_distance"
            android:text="奖励金额："
            android:textSize="15sp"
            android:gravity="center"

            />
        <TextView
            android:id="@+id/waitfin_tv_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/waitfin_tv_dis"
            android:text="￥5"
            android:textSize="15sp"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000" />
    <RelativeLayout
        android:id="@+id/waitfin_ll_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@+id/waitfin_tv_address">

        <Button
            android:id="@+id/waitfin_bt_pay"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="right"
            android:background="@null"
            android:text="支付"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            />
        <Button
            android:id="@+id/waitfin_bt_cancleorder"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@null"
            android:text="取消订单"
            android:textSize="16sp"
            android:layout_toLeftOf="@id/waitfin_bt_pay"
            android:layout_marginRight="16dp"
            />

    </RelativeLayout>

    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000" />

</LinearLayout>