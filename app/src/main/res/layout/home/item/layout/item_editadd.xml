<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_ll_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="33dp">

        <TextView
            android:id="@+id/item_tv_editname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="33dp"
            android:background="#FFFFFF"
            android:text="chenhuansheng"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            />

        <TextView
            android:id="@+id/item_tv_editphone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="33dp"
            android:background="#FFFFFF"
            android:text="15858258596"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="right"
            android:paddingRight="16dp"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_rl_body"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_below="@id/item_ll_top"
        >
        <TextView
            android:id="@+id/item_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:text="收货地址："
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/item_tv_editaddress"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_toRightOf="@+id/item_tv_1"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:text="浙江大学城市学院"
            android:textSize="20sp"
            android:textColor="#000000"
            />

    </RelativeLayout>


    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@+id/item_rl_body"/>

    <RelativeLayout
        android:id="@+id/item_ll_editbottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@+id/item_rl_body">

        <Button
            android:id="@+id/edit_bt_delete"
            android:layout_width="45dp"
            android:layout_height="33dp"
            android:layout_gravity="right"
            android:background="@null"
            android:text="删除"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            />
        <Button
            android:id="@+id/edit_bt_edit"
            android:layout_width="45dp"
            android:layout_height="33dp"
            android:background="@null"
            android:text="编辑"
            android:textSize="16sp"
            android:layout_toLeftOf="@id/edit_bt_delete"
            android:layout_marginRight="16dp"
            />

        </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#D7D7D7"
        />

</LinearLayout>