<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/haveeval_rl_top"
        android:layout_width="match_parent"
        android:layout_height="33dp">

        <ImageView
            android:id="@+id/haveeval_head"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:background="@drawable/shape" />

        <TextView
            android:id="@+id/haveeval_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/haveeval_head"
            android:paddingLeft="16dp"
            android:text="送货员1"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/haveeval_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="已评价"
            android:textColor="#000000"
            android:textSize="16sp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_tv_address"
        android:layout_marginTop="1dp"
        android:background="#33000000" />

    <RelativeLayout
        android:id="@+id/haveeval_rl_body"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <TextView
            android:id="@+id/haveeval_tv_task"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="买菜"
            android:textSize="35sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/haveeval_tv_text"
            android:layout_width="200dp"
            android:layout_height="16dp"
            android:layout_below="@+id/haveeval_tv_task"
            android:paddingLeft="16dp"
            android:text="备注"
            android:textSize="15sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/haveeval_tv_distance"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/haveeval_tv_task"
            android:gravity="center"
            android:text="最远距离："
            android:textSize="15sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/haveeval_tv_dis"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/haveeval_tv_distance"
            android:gravity="center"
            android:text="2km"
            android:textSize="15sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/haveeval_tv_reward"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_below="@+id/haveeval_tv_distance"
            android:layout_toRightOf="@+id/haveeval_tv_task"
            android:gravity="center"
            android:text="奖励金额："
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/haveeval_tv_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/haveeval_tv_dis"
            android:gravity="center"
            android:text="￥5"
            android:textSize="15sp"
            android:textColor="#000000"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_tv_address"
        android:layout_marginTop="1dp"
        android:background="#33000000" />

    <RelativeLayout
        android:id="@+id/haveeval_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@+id/item_tv_address"
        android:orientation="horizontal">

        <Button
            android:id="@+id/haveeval_bt_addfri"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:text="加为好友"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#33000000" />


</LinearLayout>