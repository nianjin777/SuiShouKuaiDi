<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/neartask_rl_body"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <TextView
            android:id="@+id/neartask_tv_task"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:text="买菜"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/neartask_tv_text"
            android:layout_width="200dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/neartask_tv_task"
            android:gravity="center_vertical|left"
            android:paddingLeft="16dp"
            android:text="备注"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/neartask_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/neartask_tv_task"
            android:gravity="center"
            android:text="距离："
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/neartask_tv_dis"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/neartask_tv_1"
            android:gravity="center_vertical"
            android:text="2km"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/neartask_tv_2"
            android:layout_width="120dp"
            android:layout_height="33dp"
            android:layout_below="@+id/neartask_tv_1"
            android:layout_toRightOf="@+id/neartask_tv_task"
            android:gravity="center"
            android:text="奖励金额："
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/neartask_tv_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/neartask_tv_dis"
            android:gravity="center"
            android:text="￥5"
            android:textColor="#000000"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#33000000" />

</LinearLayout>