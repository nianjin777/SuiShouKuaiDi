<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/friapply_body"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <ImageView
            android:id="@+id/friapply_iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/shape" />

        <TextView
            android:id="@+id/friapply_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/friapply_iv_head"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:text="名称"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/friapply_tv_mes"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_below="@+id/friapply_tv_name"
            android:layout_toRightOf="@+id/friapply_iv_head"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:text="好评数："
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/friapply_tv_level"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="33dp"
            android:layout_toRightOf="@+id/friapply_tv_mes"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="4"
            android:textSize="16sp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/friapply_bt_apply"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:hint="接受"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:layout_marginRight="16dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#33000000" />

</LinearLayout>