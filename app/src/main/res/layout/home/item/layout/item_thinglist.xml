<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/neartask_rl_body"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <TextView
            android:id="@+id/thinglist_tv_task"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:text="买菜"
            android:textSize="35sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/thinglist_tv_place"
            android:layout_width="230dp"
            android:layout_height="16dp"
            android:layout_below="@+id/thinglist_tv_task"
            android:text="购买地点"
            android:paddingLeft="16dp"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/thinglist_tv_1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/thinglist_tv_task"
            android:text="大致金额"
            android:textSize="15sp"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/thinglist_tv_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/thinglist_tv_1"
            android:text="￥5"
            android:textSize="15sp"
            android:gravity="center"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        />

</LinearLayout>