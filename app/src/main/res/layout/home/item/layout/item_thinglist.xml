<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/neartask_rl_body"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <TextView
            android:id="@+id/thinglist_tv_name"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:text="买菜"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/thinglist_tv_place"
            android:layout_width="230dp"
            android:layout_height="16dp"
            android:layout_below="@+id/thinglist_tv_name"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="购买地点"
            android:textSize="12sp" />

        <!--<TextView-->
        <!--android:id="@+id/thinglist_tv_1"-->
        <!--android:layout_width="80dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center"-->
        <!--android:text="大致金额"-->
        <!--android:textSize="15sp"-->
        <!--android:layout_alignBaseline="@+id/thinglist_tv_task"-->
        <!--android:layout_alignBottom="@+id/thinglist_tv_task"-->
        <!--android:layout_toEndOf="@+id/thinglist_tv_task" />-->
        <LinearLayout
            android:id="@+id/thinglist_ll"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/thinglist_tv_name"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="数量：" />

                <TextView
                    android:id="@+id/thinglist_et_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="5" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="大致金额:" />

        </LinearLayout>


        <TextView
            android:id="@+id/thinglist_tv_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/thinglist_ll"
            android:gravity="center"
            android:text="5"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#33000000" />

</LinearLayout>