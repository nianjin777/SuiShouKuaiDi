<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/messgae_body"
        android:layout_width="match_parent"
        android:layout_height="66dp">
        
        <ImageView
            android:id="@+id/message_iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape"
            />
        <TextView
            android:id="@+id/message_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="友人1"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/message_iv_head"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            />
        <TextView
            android:id="@+id/message_tv_mes"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="你在干嘛？"
            android:textSize="16sp"
            android:layout_below="@+id/message_tv_name"
            android:layout_toRightOf="@+id/message_iv_head"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/message_tv_time"
            android:layout_width="66dp"
            android:layout_height="17dp"
            android:text="14:44"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:textColor="#000000"
            />
        
    </RelativeLayout>

    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_below="@+id/item_tv_address"/>
    
</LinearLayout>