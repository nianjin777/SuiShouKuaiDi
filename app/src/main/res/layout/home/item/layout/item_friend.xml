<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/friend_body"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <ImageView
            android:id="@+id/friend_iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/shape" />

        <TextView
            android:id="@+id/friend_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/friend_iv_head"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:text="友人1"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/friend_tv_mes"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_below="@+id/friend_tv_name"
            android:layout_toRightOf="@+id/friend_iv_head"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:text="好评数："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/friend_tv_level"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="33dp"
            android:layout_toRightOf="@+id/friend_tv_mes"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="4"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_tv_address"
        android:layout_marginTop="1dp"
        android:background="#33000000" />

</LinearLayout>