<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_tv_addname"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="chenhuansheng"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_tv_addphone"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="right"
            android:paddingRight="16dp"
            android:text="1558258596"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_below="@+id/item_ll"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/item_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="收货地址："
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_tv_addaddress"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_toRightOf="@+id/item_tv_2"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:text="浙江大学城市学院"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#33000000" />

</LinearLayout>