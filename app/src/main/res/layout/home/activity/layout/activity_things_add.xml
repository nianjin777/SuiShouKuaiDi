<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<TextView-->
    <!--android:id="@+id/add_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="50dp"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:background="#D7D7D7"-->
    <!--android:gravity="center"-->
    <!--android:text="添加物品"-->
    <!--android:textColor="#000000"-->
    <!--android:textSize="20sp" />-->
    <include
        android:id="@+id/add_title1"
        layout="@layout/item_title1"></include>

    <TextView
        android:id="@+id/add_thingname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/add_title1"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="物品名"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:background="#33000000" />

    <EditText
        android:id="@+id/add_et_setname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/add_thingname"
        android:background="#FFFFFF"
        android:hint="输入物品名称"
        android:paddingLeft="16dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/add_thingplace"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/add_et_setname"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="购买地点"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/add_bt_setplace"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_thingplace"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="点击选择"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/add_thingmoney"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/add_bt_setplace"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="预算"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/add_et_setmoney"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/add_thingmoney"
        android:background="#FFFFFF"
        android:hint="输入预算"
        android:paddingLeft="16dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_bt_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#F2F2F2"
            android:text="取消"
            android:textSize="20sp" />

        <Button
            android:id="@+id/add_bt_add"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#F2F2F2"
            android:text="添加"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>


